@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.9.1.js"></script>
    <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <meta charset="utf-8" />
    <title>IKKON</title>
    <style>
        html {
            height: 100%;
            margin: 0;
        }

        body {
            font-family: Arial,"Microsoft JhengHei";
            background-color: #FCD4D5;
            height: 100%;
            margin: 0;
        }

        .login_background {
            width: 500px;
            height: 100%;
            background-color: #FFFFFF;
            margin: 0px auto;
        }

        .loginBox {
            padding-top: 35%;
        }

        .logo {
            font-size: 40pt;
            margin: auto;
            display: flex;
            justify-content: center;
            padding-top: 8%;
            padding-bottom: 3%;
            color: #f2a1a1;
        }

        .inputbox {
            width: 350px;
            height: 50px;
            background-color: #FFFFFF;
            color: #acacac;
            border-radius: 5px;
            margin: auto;
            margin-top: 3%;
        }

        .inputbox_text {
            font-size: 20pt;
            padding-left: 15px;
            line-height: 50px;
        }

        .btn_div {
            display: flex;
            align-content: center;
            justify-content: center;
            margin-top: 20px;
        }

        .btn_loginPage {
            width: 350px;
            height: 40px;
            font-size: 15pt;
            border-radius: 5px;
            background-color: #F2A1A1;
            color: #FFFFFF;
            font-weight: 600;
        }

            .btn_loginPage:hover {
                background-color: #D68D8D;
            }

        .btn_singup {
            width: 130px;
            height: 50px;
            font-size: 15pt;
            border-radius: 5px;
            background-color: #F2A1A1;
            color: #FFFFFF;
            font-weight: 700;
        }

            .btn_singup:hover {
                border: 1px solid #FFFFFF;
            }

        .btn_login_text {
            color: #be5959;
            font-size: 18pt;
            text-align: center;
            line-height: 50px;
            font-weight: 800;
        }

        a {
            text-decoration: none;
        }

        input[type="text"] {
            height: 45px;
            border-radius: 5px;
            border: 1px solid #FCD4D5;
            font-size: 15pt;
            margin-top: 2px;
            outline: 0;
            padding-left: 15px;
        }

            input[type="text"]:focus {
                border: 1px solid #F2A1A1;
            }

        .input_login {
            width: 330px;
        }

        .input_sinup {
            width: 430px;
        }

        input[type="button"] {
            border: none;
        }

        input[type="date"] {
            height: 45px;
            border-radius: 5px;
            border: 1px solid #FCD4D5;
            font-size: 15pt;
            margin-top: 2px;
            outline: 0;
            padding-left: 12px;
            padding-right: 5px;
        }

            input[type="date"]:focus {
                border: 1px solid #F2A1A1;
            }

            input[type="date"]::-webkit-calendar-picker-indicator {
                background-image: url('/Image/date.png');
                background-repeat: no-repeat;
            }

        /*POP背景遮罩*/
        .popLayer {
            display: none;
            background-color: #00000052;
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
        }

        /*POP彈窗樣式*/
        .popBox {
            display: none;
            background-color: #FFFFFF;
            border: 1px solid #D68D8D;
            border-radius: 10px;
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            bottom: 0;
            margin: auto;
        }

        .signupStyle {
            width: 700px;
            height: 680px;
        }

        .InfoStyle {
            width: 700px;
            height: 515px;
        }

        .topBar {
            height: 50px;
            display: flex;
            justify-content: center;
            margin-bottom: 8%;
        }

        .closeIcon {
            width: 50px;
            height: 50px;
            fill: #F2A1A1;
            position: absolute;
            right: 0px;
        }

            .closeIcon:hover {
                fill: #D68D8D;
            }

        .popTitle {
            color: #D68D8D;
            font-size: 25pt;
            font-weight: 700;
            position: absolute;
            padding-top: 35px;
        }

        .singupText {
            font-size: 16pt;
            color: #4E4E4E;
            position: relative;
            bottom: 50%;
            right: 5%;
            font-weight: 600;
        }

        .singupTextBackground {
            width: 90%;
            height: 70%;
            background-color: #ffe9e9;
            border-radius: 25px;
            position: relative;
            top: 20%;
        }

        .InfoTextBackground {
            width: 50px;
            height: 70%;
            background-color: #ffe9e9;
            border-radius: 25px;
            position: relative;
            top: 20%;
            right: 15px;
        }

        .singupContent {
            display: flex;
            align-items: center;
            justify-content: left;
            margin: 3% 9%;
        }

        .singupInputText {
            width: 100px;
            height: 30px;
        }

        .InfoInputText {
            height: 30px;
        }

        .linediv {
            display: flex;
            align-content: center;
            justify-content: center;
        }

        .lineStyle {
            width: 80%;
            height: 1px;
            background-color: #dadada;
        }

        .forgotPassword {
            display: flex;
            justify-content: center;
        }

        .forgotPasswordWindow {
            width: 300px;
            height: 300px;
        }

        .btn_forgotPassword {
            background: none;
            color: #F2A1A1;
            font-size: 14pt;
            margin-top: 3%;
        }

            .btn_forgotPassword:hover {
                color: #D68D8D;
            }

        .Error {
            width: 300px;
            height: 200px;
        }

        .btn_Error {
            width: 130px;
            height: 50px;
            font-size: 15pt;
            border-radius: 5px;
            background-color: #F2A1A1;
            color: #FFFFFF;
            font-weight: 700;
        }

            .btn_Error:hover {
                border: 1px solid #FFFFFF;
            }

        .ErrorText {
            display: flex;
            justify-content: center;
            margin-top: 10%;
            font-size: 15pt;
            color: #FF5A5A;
            font-weight: 600;
            text-align: center;
            height: 80px;
            align-items: center;
        }

        .PromptText {
            color: #BFBFBF;
            font-size: 12pt;
        }

        .btn_Verification {
            height: 40px;
            font-size: 15pt;
            border-radius: 5px;
            background-color: #F2A1A1;
            color: #FFFFFF;
            font-weight: 600;
        }

            .btn_Verification:hover {
                background-color: #D68D8D;
            }

        .subTitle {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .InfoIcon {
            width: 90px;
            margin-left: 10px;
            right: 0px;
        }

        .InfoInputdiv {
            display: contents;
        }

        /*隱藏時間選擇按鈕文字*/
        #datepicker {
            width: 45px;
            height: 45px;
            text-indent: -999px;
            overflow: hidden;
            background: none;
            margin: auto;
            position: absolute;
        }

        .DateText {
            margin: auto;
            font-size: 14pt;
        }

        .DateInput {
            width: 85px;
        }

        .DateIcon {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .ui-widget-content {
            background: #FFFFFF;
            border: none;
            box-shadow: 1px 1px 3px 1px #0000001c;
        }
        .ui-widget-header {
            border: none;
            background: #FCD4D5;
            color: #be5959;
        }
            .ui-state-default, .ui-widget-content .ui-state-default, .ui-widget-header .ui-state-default {
                background: #ffe9e9;
            }
    </style>
</head>
<body>
    <div class="login_background">
        <div class="loginBox">
            <a class="logo">I K K O N</a>
            <div class="inputbox">
                <input class="input_login" type="text" placeholder="請輸入帳號" id="account" autocomplete="off" maxlength="20">
            </div>
            <div class="inputbox">
                <input class="input_login" type="text" placeholder="請輸入密碼" id="password" autocomplete="off" maxlength="100">
            </div>

