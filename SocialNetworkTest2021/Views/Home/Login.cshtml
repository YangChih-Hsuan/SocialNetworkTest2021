                <div class="popLayer"></div>
                <div class="popBox forgotPasswordWindow">
                    <div class="topBar">
                        <div class="popTitle"><a>忘記密碼</a></div>
                        <div onclick="pop('forgotPassword', false)"><img class="svg closeIcon" src="~/Image/Close.svg"></div>
                    </div>
                </div>
            </div>

            <!--登入-->
            <div class="btn_div">
                <div><input class="btn_loginPage" type="button" value="登入" onclick="login()"></div>
            </div>
            <div id="loginError">
                <div class="popLayer"></div>
                <div class="popBox Error">
                    <a class="ErrorText">帳號或密碼錯誤<br>請重新輸入</a>
                    <div class="btn_div">
                        <input class="btn_Error" type="button" value="確認" onclick="pop('loginError', false)">
                    </div>
                </div>
            </div>

            <!--Google帳號登入-->
            <div class="btn_div">
                <div><input class="btn_loginPage" type="button" value="Google帳號登入" onclick=""></div>
            </div>

            <!--分隔線-->
            <div class="linediv">
                <div class="lineStyle" style="margin-top: 20px;"></div>
            </div>

            <!--註冊-->
            <div class="btn_div" id="signup">
                <div><input class="btn_loginPage" type="button" value="新會員註冊" onclick="pop('signup', true)"></div>
                <div class="popLayer"></div>
                <div class="popBox signupStyle">
                    <div class="topBar">
                        <div class="popTitle"><a>新會員註冊</a></div>
                        <div onclick="pop('signup', false)"><img class="svg closeIcon" src="~/Image/Close.svg"></div>
                    </div>
                    <div class="singupContent">
                        <div class="singupInputText">
                            <div class="singupTextBackground">
                                <a class="singupText">會員名稱</a>
                            </div>
                        </div>
                        <div>
                            <input class="input_sinup" type="text" placeholder="限制字數30字" id="name" autocomplete="off" maxlength="20">
                        </div>
                    </div>
                    <div class="singupContent">
                        <div class="singupInputText" style="margin-bottom: 15px">
                            <div class="singupTextBackground">
                                <a class="singupText">會員帳號</a>
                            </div>
                        </div>
                        <div>
                            <input class="input_sinup" type="text" placeholder="請設定登入帳號" id="singup_account" autocomplete="off" maxlength="20" style="margin-bottom:5px">
                            <br>
                            <a class="PromptText">限制設定6個以上英文或數字，勿使用特殊符號。</a>
                        </div>
                    </div>
                    <div class="singupContent">
                        <div class="singupInputText">
                            <div class="singupTextBackground">
                                <a class="singupText">會員密碼</a>
                            </div>
                        </div>
                        <div>
                            <input class="input_sinup" type="text" placeholder="請設定登入密碼" id="singup_password" autocomplete="off" maxlength="100">
                        </div>
                    </div>
                    <div class="singupContent">
                        <div class="singupInputText">
                            <div class="singupTextBackground">
                                <a class="singupText">確認密碼</a>
                            </div>
                        </div>
                        <div>
                            <input class="input_sinup" type="text" placeholder="請再輸入一次密碼" autocomplete="off" maxlength="100"> @*密碼確認方式待研究*@
                        </div>
                    </div>
                    <div class="singupContent">
                        <div class="singupInputText">
                            <div class="singupTextBackground">
                                <a class="singupText">電子郵件</a>
                            </div>
                        </div>
                        <div style="display:flex; align-items:center;">
                            <input class="input_sinup" type="text" placeholder="請輸入有效電子郵件" id="mail" autocomplete="off" maxlength="100" style="width: 310px; margin-right:5px;">
                            <input class="btn_Verification" type="button" value="取得驗證碼">
                        </div>
                    </div>
                    <div class="linediv"><div class="lineStyle"></div></div>
                    <div class="singupContent">
                        <div class="singupInputText" style="margin-bottom: 15px">
                            <div class="singupTextBackground">
                                <a class="singupText">驗 證 碼</a>
                            </div>
                        </div>
                        <div>
                            <input class="input_sinup" type="text" placeholder="請輸入驗證碼" id="" autocomplete="off" maxlength="20" style="margin-bottom:5px">
                            <br>
                            <a class="PromptText">請至電子郵件收取信件，取得驗證碼以完成註冊。</a>
                        </div>
                    </div>
                    <div class="btn_div">
                        <div><input class="btn_singup" type="button" value="註冊" onclick="Singup()"></div>
                    </div>
                </div>
            </div>
            <div id="supingError">
                <div class="popLayer"></div>
                <div class="popBox Error">
                    <a class="ErrorText">資料未填寫完整</a>
                    <div class="btn_div">
                        <input class="btn_Error" type="button" value="確認" onclick="pop('supingError', false)">
                    </div>
                </div>
            </div>

            <!--會員資料填寫-->
            <div class="btn_div" id="MemberInfo">
                <div><input class="btn_loginPage" type="button" value="會員資料POPTest" onclick="pop('MemberInfo', true)"></div>
                <div class="popLayer"></div>
                <div class="popBox InfoStyle">
                    <div class="topBar">
                        <div class="popTitle"><a>填寫會員資料</a></div>
                        <div onclick="pop('MemberInfo', false)"><img class="svg closeIcon" src="~/Image/Close.svg"></div>
                    </div>
                    <div class="subTitle"><a class="PromptText">限制設定6個以上英文或數字，勿使用特殊符號。</a></div>
                    <div class="singupContent">
                        <div class="InfoInputText">
                            <div class="InfoTextBackground">
                                <a class="singupText">生日</a>
                            </div>
                        </div>
                        <div class="InfoInputdiv">
                            @*<input class="input_sinup" type="date" autocomplete="off" maxlength="20" value="1995-06-15" id="Birth">*@
                            <input type="text" id="year" autocomplete="off" class="DateInput" disabled="disabled"><a class="DateText">年</a>
                            <input type="text" id="month" autocomplete="off" class="DateInput" disabled="disabled"><a class="DateText">月</a>
                            <input type="text" id="day" autocomplete="off" class="DateInput" disabled="disabled"><a class="DateText">日</a>
                            <div class="DateIcon">
                                <input type="button" id="datepicker">
                                <img src="~/Image/date.png">
                            </div>
                            <div onclick=""><img class="svg InfoIcon" src="~/Image/InfoPublic.png"></div>
                        </div>
                    </div>
                    <div class="singupContent">
                        <div class="InfoInputText" style="margin-bottom: 15px">
                            <div class="InfoTextBackground">
                                <a class="singupText">興趣</a>
                            </div>
                        </div>
                        <div class="InfoInputdiv">
                            <input class="input_sinup" type="text" autocomplete="off" maxlength="20">
                            <div onclick=""><img class="svg InfoIcon" src="~/Image/InfoPublic.png"></div>
                        </div>
                    </div>
                    <div class="singupContent">
                        <div class="InfoInputText">
                            <div class="InfoTextBackground">
                                <a class="singupText">工作</a>
                            </div>
                        </div>
                        <div class="InfoInputdiv">
                            <input class="input_sinup" type="text" autocomplete="off" maxlength="100">
                            <div onclick=""><img class="svg InfoIcon" src="~/Image/InfoPublic.png"></div>
                        </div>
                    </div>
                    <div class="singupContent">
                        <div class="InfoInputText">
                            <div class="InfoTextBackground">
                                <a class="singupText">學歷</a>
                            </div>
                        </div>
                        <div class="InfoInputdiv">
                            <input class="input_sinup" type="text" autocomplete="off" maxlength="100">
                            <div onclick=""><img class="svg InfoIcon" src="~/Image/InfoPublic.png"></div>
                        </div>
                    </div>
                    <div class="btn_div">
                        <div><input class="btn_singup" type="button" value="完成" onclick="dateTest()"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        /*SVG元素控制*/
        jQuery('img.svg').each(function () {
            var $img = jQuery(this);
            var imgID = $img.attr('id');
            var imgClass = $img.attr('class');
            var imgURL = $img.attr('src');

            jQuery.get(imgURL, function (data) {
                // Get the SVG tag, ignore the rest
                var $svg = jQuery(data).find('svg');

                // Add replaced image's ID to the new SVG
                if (typeof imgID !== 'undefined') {
                    $svg = $svg.attr('id', imgID);
                }
                // Add replaced image's classes to the new SVG
                if (typeof imgClass !== 'undefined') {
                    $svg = $svg.attr('class', imgClass + ' replaced-svg');
                }

                // Remove any invalid XML tags as per http://validator.w3.org
                $svg = $svg.removeAttr('xmlns:a');

                // Check if the viewport is set, if the viewport is not set the SVG wont't scale.
                if (!$svg.attr('viewBox') && $svg.attr('height') && $svg.attr('width')) {
                    $svg.attr('viewBox', '0 0 ' + $svg.attr('height') + ' ' + $svg.attr('width'))
                }

                // Replace image with new SVG
                $img.replaceWith($svg);

            }, 'xml');

        });

        $(document).ready(() => {
            //進網頁先載入API
        });

        function login() {
            $.post("/API/MemberAPI/LoginV2",
                {
                    Account: $("#account").val(),
                    Password: $("#password").val()
                },
                (res) => {
                    if (res.ResultCode == 1)
                        // 導主頁
                        window.location.href = "/Home/Index";
                    else
                        pop('loginError', true);
                }
            );
        };

        function Singup() {
            if ($("#singup_account").val() == null || $("#singup_account").val() == "") {
                //alert("您尚未填寫帳號!");
                pop('supingError', true);
            } else if ($("#singup_password").val() == null || $("#singup_password").val() == "") {
                //alert("您尚未填寫密碼!");
                pop('supingError', true);
            } else if ($("#name").val() == null || $("#name").val() == "") {
                //alert("您尚未填寫姓名!");
                pop('supingError', true);
            } else if ($("#mail").val() == null || $("#mail").val() == "") {
                //alert("您尚未填寫mail!");
                pop('supingError', true);
            }
            $.post("/API/MemberAPI/Singup",
                {
                    Account: $("#singup_account").val(),
                    Password: $("#singup_password").val(),
                    Name: $("#name").val(),
                    //PasswordConfirm: $("#passwordConfirm").val(),
                    Mail: $("#mail").val()
                    //VerificationCode: $("#verificationCode").val()
                },
                (res) => {
                    if (res.ResultCode == 1)
                        // 導主頁
                        alert(res.Message);
                    //window.location.href = '/Home/Index';
                    else
                        alert(res.Message);
                }
            );
        };
        /*POP*/
        function pop(containerID, ispop) {
            var popBox = $('#' + containerID + '> .popBox')[0];
            var popLayer = $('#' + containerID + '> .popLayer')[0];
            popBox.style.display = popLayer.style.display = ispop ? "block" : "none";
        }
        function dateTest() {
            $.post("/API/MemberAPI/Datetest",
                {
                    Brithdate: $('#Birth').val()
                },
                (res) => {
                    if (res.ResultCode == 1)
                        // 導主頁
                        alert(res.Message);
                    else
                        alert(res.Message);
                }
            );
        }
        /*會員資料填寫 日期選擇元件*/
        $(function () {
            $("#datepicker").datepicker({
                changeMonth: true,
                changeYear: true,
                showMonthAfterYear: true,
                onSelect: function (dateText, inst) {
                    $("#year").val(inst.selectedYear);
                    $("#month").val(inst.selectedMonth + 1);
                    $("#day").val(inst.selectedDay);
                }
            });
            $("#datepicker").on('change', function () {
                $(this).val("")
            });
        });
    </script>
</body>
</html>