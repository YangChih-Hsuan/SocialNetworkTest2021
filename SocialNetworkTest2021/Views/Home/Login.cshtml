@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    @Scripts.Render("~/bundles/jquery")
    <meta charset="utf-8" />
    <title>會員登入</title>
    <style>
        html {
            height: 100%;
            margin: 0;
        }

        body {
            font-family: Arial,'Microsoft JhengHei';
            background-color: #FFE5E5;
            height: 100%;
            margin: 0;
        }

        .login_background {
            width: 500px;
            height: 100%;
            background-color: #FFFFFF;
            margin: 0px auto;
        }

        .loginBox {
            padding-top: 50%;
        }

        .logo {
            font-size: 40pt;
            margin: auto;
            padding-left: 30%;
            padding-top: 8%;
            padding-bottom: 3%;
            color: #D68D8D;
        }

        .inputbox {
            width: 350px;
            height: 50px;
            background-color: #FFFFFF;
            color: #acacac;
            border: 1px solid #D68D8D;
            border-radius: 5px;
            margin: auto;
            margin-top: 3%;
        }

        .singupInputBox {
            width: 450px;
            height: 50px;
            background-color: #FFFFFF;
            border: 1px solid #F2A1A1;
            color: #acacac;
            border-radius: 5px;
        }

        .inputbox_text {
            font-size: 20pt;
            padding-left: 15px;
            line-height: 50px;
        }

        .btn_div {
            display: flex;
            align-content: center;
            justify-content: center;
            margin-top: 20px;
        }

        .btn_loginPage {
            width: 350px;
            height: 40px;
            font-size: 15pt;
            border-radius: 5px;
            background-color: #F2A1A1;
            color: #FFFFFF;
            font-weight: 500;
        }

            .btn_loginPage:hover {
                background-color: #D68D8D;
            }

        .btn_singup {
            width: 130px;
            height: 50px;
            font-size: 15pt;
            border-radius: 5px;
            background-color: #F2A1A1;
            color: #FFFFFF;
            font-weight: 700;
        }

            .btn_singup:hover {
                border: 1px solid #FFFFFF;
            }

        .btn_login_text {
            color: #be5959;
            font-size: 18pt;
            text-align: center;
            line-height: 50px;
            font-weight: 800;
        }

        a {
            text-decoration: none;
        }

        input[type="text"] {
            height: 45px;
            border-radius: 5px;
            border: none;
            font-size: 15pt;
            margin-top: 2px;
            outline: 0;
            padding-left: 15px;
        }

        .input_login {
            width: 330px;
        }

        .input_sinup {
            width: 380px;
        }

        input[type="button"] {
            border: none;
        }

        /*POP背景遮罩*/
        #popLayer {
            display: none;
            background-color: #00000052;
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
        }

        /*POP彈窗樣式*/
        #popBox {
            display: none;
            background-color: #FFFFFF;
            width: 700px;
            height: 680px;
            border: 1px solid #D68D8D;
            border-radius: 10px;
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            bottom: 0;
            margin: auto;
        }

        .topBar {
            height: 50px;
            display: flex;
            justify-content: center;
            margin-bottom: 8%;
        }

        .closeIcon {
            width: 50px;
            height: 50px;
            fill: #F2A1A1;
            position: absolute;
            right: 0px;
        }

            .closeIcon:hover {
                fill: #D68D8D;
            }

        .popTitle {
            color: #D68D8D;
            font-size: 25pt;
            font-weight: 700;
            position: absolute;
            padding-top: 35px;
        }

        .singupText {
            font-size: 16pt;
            color: #4E4E4E;
            position: relative;
            bottom: 50%;
            right: 5%;
            font-weight: 600;
        }

        .singupTextBackground {
            width: 90%;
            height: 70%;
            background-color: #FFE5E5;
            border-radius: 25px;
            position: relative;
            top: 20%;
        }

        .singupContent {
            display: flex;
            align-items: center;
            margin: 3% 10%;
        }

        .singupInputText {
            width: 100px;
            height: 30px;
        }
        .lineStyle {
            width: 80%;
            height: 1px;
            background-color: #dadada;
            position: relative;
            left: 10%;
        }
    </style>
</head>
<body>
    <div class="login_background">
        <div class="loginBox">
            <a class="logo">L O G O</a>
            <div class="inputbox">
                <input class="input_login" type="text" placeholder="請輸入帳號" id="account" autocomplete="off" maxlength="20">
            </div>
            <div class="inputbox">
                <input class="input_login" type="text" placeholder="請輸入密碼" id="password" autocomplete="off" maxlength="100">
            </div>
            <div class="btn_div">
                <div><input class="btn_loginPage" type="button" value="登入" onclick="login()"></div>
            </div>
            <div class="btn_div">
                <div><input class="btn_loginPage" type="button" value="新會員註冊" onclick="popBox()"></div>
                <div id="popLayer"></div>
                <div id="popBox">
                    <div class="topBar">
                        <div class="popTitle"><a>新會員註冊</a></div>
                        <div onclick="closeBox()"><img class="svg closeIcon" src="~/Image/Close.svg"></div>
                    </div>
                    <div class="singupContent">
                        <div class="singupInputText">
                            <div class="singupTextBackground">
                                <a class="singupText">會員名稱</a>
                            </div>
                        </div>
                        <div class="singupInputBox">
                            <input class="input_sinup" type="text" placeholder="請輸入姓名" id="name" autocomplete="off" maxlength="20">
                        </div>
                    </div>
                    <div class="singupContent">
                        <div class="singupInputText">
                            <div class="singupTextBackground">
                                <a class="singupText">會員帳號</a>
                            </div>
                        </div>
                        <div class="singupInputBox">
                            <input class="input_sinup" type="text" placeholder="請輸入帳號" id="singup_account" autocomplete="off" maxlength="20">
                        </div>
                    </div>
                    <div class="singupContent">
                        <div class="singupInputText">
                            <div class="singupTextBackground">
                                <a class="singupText">會員密碼</a>
                            </div>
                        </div>
                        <div class="singupInputBox">
                            <input class="input_sinup" type="text" placeholder="請輸入密碼" id="singup_password" autocomplete="off" maxlength="100">
                        </div>
                    </div>
                    <div class="singupContent">
                        <div class="singupInputText">
                            <div class="singupTextBackground">
                                <a class="singupText">電子郵件</a>
                            </div>
                        </div>
                        <div class="singupInputBox">
                            <input class="input_sinup" type="text" placeholder="請輸入有效電子郵件" id="mail" autocomplete="off" maxlength="100">
                        </div>
                    </div>
                    <div class="lineStyle"></div>
                    <div class="btn_div">
                        <div><input class="btn_singup" type="button" value="註冊" onclick="Singup()"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        /*SVG元素控制*/
        jQuery('img.svg').each(function () {
            var $img = jQuery(this);
            var imgID = $img.attr('id');
            var imgClass = $img.attr('class');
            var imgURL = $img.attr('src');

            jQuery.get(imgURL, function (data) {
                // Get the SVG tag, ignore the rest
                var $svg = jQuery(data).find('svg');

                // Add replaced image's ID to the new SVG
                if (typeof imgID !== 'undefined') {
                    $svg = $svg.attr('id', imgID);
                }
                // Add replaced image's classes to the new SVG
                if (typeof imgClass !== 'undefined') {
                    $svg = $svg.attr('class', imgClass + ' replaced-svg');
                }

                // Remove any invalid XML tags as per http://validator.w3.org
                $svg = $svg.removeAttr('xmlns:a');

                // Check if the viewport is set, if the viewport is not set the SVG wont't scale.
                if (!$svg.attr('viewBox') && $svg.attr('height') && $svg.attr('width')) {
                    $svg.attr('viewBox', '0 0 ' + $svg.attr('height') + ' ' + $svg.attr('width'))
                }

                // Replace image with new SVG
                $img.replaceWith($svg);

            }, 'xml');

        });

        $(document).ready(() => {
            //進網頁先載入API
        });

        function login() {
            $.post("/API/MemberAPI/LoginV2",
                {
                    Account: $("#account").val(),
                    Password: $("#password").val()
                },
                (res) => {
                    if (res.ResultCode == 1)
                        // 導主頁
                        //alert(res.Message);
                        window.location.href = "/Home/Index";
                    else
                        alert(res.Message);
                }
            );
        };

        function Singup() {
            if ($("#singup_account").val() == null || $("#singup_account").val() == "") {
                alert("您尚未填寫帳號!");
            } else if ($("#singup_password").val() == null || $("#singup_password").val() == "") {
                alert("您尚未填寫密碼!");
            } else if ($("#name").val() == null || $("#name").val() == "") {
                alert("您尚未填寫姓名!");
            } else if ($("#mail").val() == null || $("#mail").val() == "") {
                alert("您尚未填寫mail!");
            }
            $.post("/API/MemberAPI/Singup",
                {
                    Account: $("#singup_account").val(),
                    Password: $("#singup_password").val(),
                    Name: $("#name").val(),
                    //PasswordConfirm: $("#passwordConfirm").val(),
                    Mail: $("#mail").val()
                    //VerificationCode: $("#verificationCode").val()
                },
                (res) => {
                    if (res.ResultCode == 1)
                        // 導主頁
                        alert(res.Message);
                    //window.location.href = '/Home/Index';
                    else
                        alert(res.Message);
                }
            );
        };

        /*彈窗*/
        function popBox() {
            var popBox = document.getElementById("popBox");
            var popLayer = document.getElementById("popLayer");
            popBox.style.display = "block";
            popLayer.style.display = "block";
        };

        /*關閉彈窗*/
        function closeBox() {
            var popBox = document.getElementById("popBox");
            var popLayer = document.getElementById("popLayer");
            popBox.style.display = "none";
            popLayer.style.display = "none";
        }
    </script>
</body>
</html>